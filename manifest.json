{
  "manifest_version": 3,
  "name": "LoadFailShout",
  "version": "1.0",
  "description": "Redirects and screams on fail",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "webNavigation",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "web_accessible_resources": [
    {
      "resources": ["sound.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}